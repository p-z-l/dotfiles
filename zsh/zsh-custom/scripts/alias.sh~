# git
alias g="git"
alias glg="git log"
alias glgd="git log --decorated"
alias gct="git commit -m"
alias gcta="git commit -a -m"
alias gss="git status"
alias gbh="git branch"
alias gad="git add"
alias gada="git add -A"
alias gph="git push"
alias gco="git checkout"
alias gpl="git pull"
alias gcn="git clone"

# configs
alias zshrc="vim ~/.zshrc"
alias tmuxrc="vim ~/.tmux.conf"
alias vimrc="vim ~/.vimrc"
alias rezsh="source ~/.zshrc"
alias zshcstm="vim ~/.config/zsh-custom"

# empty trash
alias emtytrsh="rm -rf ~/.Trash/*"

# extract files
alias x="extract"

# config backups
alias zshconfigbackup="~/.config/zsh-custom/scripts/backupscripts/backupzsh.sh"
# alias vimconfigbackup="~/.config/zsh-custom/scripts/backupscripts/backupvim.sh"

# Swift Package Manager
alias spm="swift package"

# Funny stuff
alias archey="~/Documents/Funnystuff/archey"

# go up a dir easily
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

alias emacs="emacs -nw"
